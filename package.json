    "ios": "expo run:ios",
    "ios:device": "expo run:ios --device",
    "android:device": "expo run:android --device",
    "connect": "adb reverse tcp:8081 tcp:8081 && adb reverse tcp:8097 tcp:8097 && echo 'âœ… Metro connection configured'",
    "android:connected": "npm run connect && npm run android:device",
    "compile": "tsc --noEmit -p . --pretty",
    "typecheck": "npm run compile",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "fmt": "npm run format",
    "format:check": "prettier --check .",
    "quality": "npm run compile && npm run lint:check && npm run format:check && npm run test:ci",
    "test": "jest --watchman=false",
    "test:watch": "jest --watch --watchman=false",
    "test:ci": "jest --watchman=false --coverage --forceExit",
    "prebuild:clean": "npx expo prebuild --clean",
    "pod-install": "cd ios && pod install"
